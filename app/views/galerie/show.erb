<div class="galerie-visuel">
  <div class="galerie-titre-photo">
    <h1><%= @image.titre %></h1>
  </div>

  <div class="galerie-image-visu">
    <%= image_tag @image.avatar.url %>
  </div>

  <div class="galerie-telecharger">
    <a href="/image/download/<%= @image.id %>">Télécharger</a>
  </div>

  <div class="galerie-image-infos">
    <!-- Insérer ici le each pour sortir en auto les infos de l'image -->
  </div>

  <div class="galerie-bottombar">
    <%= link_to 'Retour à la galerie', root_path %>
  </div>
</div>